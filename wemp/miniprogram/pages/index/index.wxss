/**index.wxss**/
page {
    height: 100%;
}
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.btn-wrapper {
    display: flex;
    width: 100%;
    /* position: relative; */
    justify-content: center;
}

.btn-wrapper .btn {    
    display: flex;
    justify-content: center;

    width: 80%;
    height: 95rpx;
    /* position: absolute; */
    /* margin: 25rpx 0 0 10%; */
    line-height: 95rpx;
    
    color: white;
    border-radius: 7.5rpx;
    text-align: center;
    background-color: #17a586;
    
    animation: breath 2s infinite;
}

@keyframes breath {
	0% {
		transform: scale(1, 1);
	}
	50% {
		transform: scale(0.9, 0.9);
	}
	100% {
		transform: scale(1, 1);
	}
}